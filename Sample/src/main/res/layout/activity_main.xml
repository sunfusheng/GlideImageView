<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image11"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"/>

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image12"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"/>

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image13"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"/>

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image14"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image21"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"/>

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image22"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"/>

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image23"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"/>

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image24"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image31"
                    android:layout_width="240dp"
                    android:layout_height="135dp"
                    android:transitionName="@string/transitional_image"/>

                <com.sunfusheng.progress.CircleProgressView
                    android:id="@+id/progressView1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:progress="0"
                    android:visibility="gone"
                    app:cpv_innerPadding="2dp"
                    app:cpv_outerColor="@color/transparent90_white"
                    app:cpv_outerSize="1dp"
                    app:cpv_progressNormalColor="@color/transparent"
                    app:cpv_progressReachColor="@color/transparent90_white"
                    app:cpv_progressStyle="FillInnerArc"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <com.sunfusheng.GlideImageView
                    android:id="@+id/image32"
                    android:layout_width="240dp"
                    android:layout_height="135dp"
                    android:transitionName="@string/transitional_image"/>

                <com.sunfusheng.progress.CircleProgressView
                    android:id="@+id/progressView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:progress="0"
                    android:visibility="gone"
                    app:cpv_progressNormalColor="@color/transparent10"
                    app:cpv_progressReachColor="@color/transparent90_white"
                    app:cpv_progressStyle="FillInner"
                    app:cpv_progressTextColor="@color/red"
                    app:cpv_progressTextSize="13sp"
                    app:cpv_progressTextVisible="false"/>
            </RelativeLayout>

            <com.sunfusheng.GlideImageView
                android:id="@+id/image41"
                android:layout_width="240dp"
                android:layout_height="135dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:transitionName="@string/transitional_image"/>

        </LinearLayout>
    </ScrollView>

    <com.sunfusheng.glideimageview.sample.widget.DraggableFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/draggableView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_multi_imageview"/>
    </com.sunfusheng.glideimageview.sample.widget.DraggableFrameLayout>
</FrameLayout>